{
    "manifest_version": 3,
    "name": "Auto FxTwitter",
    "version": "1.0.0",
    "description": "Automatically use fxtwitter when sharing a post.",
    "icons": {
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    },
    "permissions": ["clipboardWrite"],
    "content_scripts": [
        {
            "matches": ["*://twitter.com/*", "*://x.com/*"],
            "js": ["auto-fxtwitter.js"]
        }
    ]
}
